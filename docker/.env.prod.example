# StaffPlan Production Environment Configuration
# Copy this file to .env and fill in the values

# =============================================================================
# Docker Image Tag
# =============================================================================
IMAGE_TAG=latest

# =============================================================================
# Domain Configuration (for Traefik)
# =============================================================================
DOMAIN=staffplan.aet.cit.tum.de
ACME_EMAIL=admin@tum.de

# =============================================================================
# PostgreSQL Database
# =============================================================================
POSTGRES_USER=staffplan
POSTGRES_PASSWORD=<generate-a-secure-password>
POSTGRES_DB=staffplan

# =============================================================================
# Keycloak Configuration
# =============================================================================
# The Keycloak server URL (for frontend)
KEYCLOAK_URL=http://keycloak.ase.in.tum.de
# The issuer URI for the Keycloak realm (for backend JWT validation)
KEYCLOAK_ISSUER_URI=http://keycloak.ase.in.tum.de/realms/staffplan
# The client ID configured in Keycloak for this application
KEYCLOAK_CLIENT_ID=staffplan-client

# =============================================================================
# Application Configuration
# =============================================================================
# The public URL of the client application (used for CORS and redirects)
CLIENT_HOST=https://staffplan.aet.cit.tum.de
